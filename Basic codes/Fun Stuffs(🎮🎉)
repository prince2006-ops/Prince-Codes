               #Head or Tail
import random
print("It's a head or tail game.")
user_input=input("Enter your decision:").strip().capitalize()
options=['Head','Tail']
side=random.choice(options)
print(f"The side was {side}")
if side==user_input:
    print("Your guess is correct!ðŸŽ‰")
else:
    print("Your guess is invalid ðŸ˜¥ Try Again!")

                    #Bill paying game by random friends in resturant
import random
names=input("Enter everybody's name:")
names_list= names.split(",")
# print(names_list)
length=len(names_list)
random_choice=random.randint(0,length-1)
print(f"{names_list[random_choice]} will pay the bill")
